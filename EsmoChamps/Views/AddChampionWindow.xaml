<Window x:Class="EsmoChamps.Views.AddChampionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding WindowTitle}"
        Height="850"
        Width="900"
        Background="#1E1E24"
        Foreground="White"
        WindowStartupLocation="CenterOwner">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="400"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT SIDE - Main Form -->
        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="30,20,20,20">
                <!-- Header -->
                <TextBlock Text="{Binding WindowTitle}" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="#9B8CFF"
                           Margin="0,0,0,20"/>

                <!-- Champion Image -->
                <Border Background="#16161C" 
                        CornerRadius="8" 
                        Padding="20"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Champion Image" 
                                   FontSize="14" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,10"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Grid.Column="0"
                                     Text="{Binding ImagePath, UpdateSourceTrigger=PropertyChanged}"
                                     Background="#2A2A32"
                                     Foreground="White"
                                     Padding="10"
                                     BorderBrush="#3A3A44"
                                     BorderThickness="1"
                                     VerticalContentAlignment="Center"
                                     Margin="0,0,10,0">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Foreground" Value="White"/>
                                        <Style.Triggers>
                                            <Trigger Property="Text" Value="">
                                                <Setter Property="Background">
                                                    <Setter.Value>
                                                        <VisualBrush Stretch="None" AlignmentX="Left">
                                                            <VisualBrush.Visual>
                                                                <TextBlock Text="e.g., Ahri.png" 
                                                                           Foreground="#666" 
                                                                           Margin="10,0,0,0"/>
                                                            </VisualBrush.Visual>
                                                        </VisualBrush>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>

                            <Button Grid.Column="1"
                                    Content="Browse..."
                                    Click="BrowseImage_Click"
                                    Padding="15,8"
                                    Background="#3A3A44"
                                    Foreground="White"
                                    BorderThickness="0"
                                    Cursor="Hand"/>
                        </Grid>

                        <TextBlock Text="Place images in: Documents\EsmoChamps\ChampionImages\" 
                                   FontSize="10"
                                   Opacity="0.6"
                                   Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Basic Info -->
                <Border Background="#16161C" 
                        CornerRadius="8" 
                        Padding="20"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Basic Information" 
                                   FontSize="14" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,15"/>

                        <TextBlock Text="Champion Name" FontSize="11" Opacity="0.7" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}"
                                 Background="#2A2A32"
                                 Foreground="White"
                                 Padding="10"
                                 BorderBrush="#3A3A44"
                                 BorderThickness="1"
                                 Margin="0,0,0,15"/>

                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Role" FontSize="11" Opacity="0.7" Margin="0,0,0,5"/>
                                <ComboBox ItemsSource="{Binding Roles}"
                                          SelectedValuePath="Id"
                                          SelectedValue="{Binding SelectedRoleId, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}"
                                          DisplayMemberPath="Name"
                                          Background="#2A2A32"
                                          Foreground="#2A2A32"
                                          Padding="10"
                                          BorderBrush="#3A3A44"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Range" FontSize="11" Opacity="0.7" Margin="0,0,0,5"/>
                                <ComboBox ItemsSource="{Binding RangeTypes}"
                                          SelectedValuePath="Id"
                                          SelectedValue="{Binding SelectedRangeTypeId, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}"
                                          DisplayMemberPath="Name"
                                          Background="#2A2A32"
                                          Foreground="#2A2A32"
                                          Padding="10"
                                          BorderBrush="#3A3A44"/>
                            </StackPanel>

                            <StackPanel Grid.Column="4">
                                <TextBlock Text="Type" FontSize="11" Opacity="0.7" Margin="0,0,0,5"/>
                                <ComboBox ItemsSource="{Binding ChampTypes}"
                                          SelectedValuePath="Id"
                                          SelectedValue="{Binding SelectedChampTypeId, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}"
                                          DisplayMemberPath="Name"
                                          Background="#2A2A32"
                                          Foreground="#2A2A32"
                                          Padding="10"
                                          BorderBrush="#3A3A44"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Difficulty -->
                <Border Background="#16161C" 
                        CornerRadius="8" 
                        Padding="20"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Difficulty Ranges (0-100)" 
                                   FontSize="14" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,15"/>

                        <!-- Mechanics -->
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="80"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="Mechanics" VerticalAlignment="Center" Opacity="0.7"/>
                            <TextBox Grid.Column="1"
                                     Text="{Binding MechanicsMin, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}"
                                     Background="#2A2A32"
                                     Foreground="White"
                                     Padding="8"
                                     BorderBrush="#3A3A44"
                                     HorizontalContentAlignment="Center"/>
                            <TextBlock Grid.Column="2" Text="-" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="3"
                                     Text="{Binding MechanicsMax, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}"
                                     Background="#2A2A32"
                                     Foreground="White"
                                     Padding="8"
                                     BorderBrush="#3A3A44"
                                     HorizontalContentAlignment="Center"/>
                        </Grid>

                        <!-- Macro -->
                        <Grid Margin="0,0,0,12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="80"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="Macro" VerticalAlignment="Center" Opacity="0.7"/>
                            <TextBox Grid.Column="1"
                                     Text="{Binding MacroMin, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}"
                                     Background="#2A2A32"
                                     Foreground="White"
                                     Padding="8"
                                     BorderBrush="#3A3A44"
                                     HorizontalContentAlignment="Center"/>
                            <TextBlock Grid.Column="2" Text="-" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="3"
                                     Text="{Binding MacroMax, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}"
                                     Background="#2A2A32"
                                     Foreground="White"
                                     Padding="8"
                                     BorderBrush="#3A3A44"
                                     HorizontalContentAlignment="Center"/>
                        </Grid>

                        <!-- Tactical -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="80"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="Tactical" VerticalAlignment="Center" Opacity="0.7"/>
                            <TextBox Grid.Column="1"
                                     Text="{Binding TacticalMin, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}"
                                     Background="#2A2A32"
                                     Foreground="White"
                                     Padding="8"
                                     BorderBrush="#3A3A44"
                                     HorizontalContentAlignment="Center"/>
                            <TextBlock Grid.Column="2" Text="-" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <TextBox Grid.Column="3"
                                     Text="{Binding TacticalMax, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}"
                                     Background="#2A2A32"
                                     Foreground="White"
                                     Padding="8"
                                     BorderBrush="#3A3A44"
                                     HorizontalContentAlignment="Center"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Power Curve -->
                <Border Background="#16161C" 
                        CornerRadius="8" 
                        Padding="20"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Power Curve (0-100)" 
                                   FontSize="14" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,15"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Early Game" FontSize="11" Opacity="0.7" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding PowerCurveStart, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}"
                                         Background="#2A2A32"
                                         Foreground="White"
                                         Padding="10"
                                         BorderBrush="#3A3A44"
                                         HorizontalContentAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Mid Game" FontSize="11" Opacity="0.7" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding PowerCurveMid, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}"
                                         Background="#2A2A32"
                                         Foreground="White"
                                         Padding="10"
                                         BorderBrush="#3A3A44"
                                         HorizontalContentAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Grid.Column="4">
                                <TextBlock Text="Late Game" FontSize="11" Opacity="0.7" Margin="0,0,0,5"/>
                                <TextBox Text="{Binding PowerCurveEnd, UpdateSourceTrigger=PropertyChanged, ValidatesOnNotifyDataErrors=True}"
                                         Background="#2A2A32"
                                         Foreground="White"
                                         Padding="10"
                                         BorderBrush="#3A3A44"
                                         HorizontalContentAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Action Buttons -->
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                            Content="Cancel"
                            Command="{Binding CancelCommand}"
                            Padding="0,12"
                            Background="#3A3A44"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="14"
                            Cursor="Hand"/>

                    <Button Grid.Column="2"
                            Content="Save Champion"
                            Command="{Binding SaveCommand}"
                            Padding="0,12"
                            Background="#9B8CFF"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Cursor="Hand"/>
                </Grid>
            </StackPanel>
        </ScrollViewer>

        <!-- RIGHT SIDE - Strengths -->
        <Border Grid.Column="1" 
                Background="#16161C" 
                BorderBrush="#2A2A32"
                BorderThickness="1,0,0,0">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Grid.Row="0" Margin="0,0,0,15">
                    <Grid Margin="0,0,0,10">
                        <TextBlock Text="Champion Strengths" 
                                   FontSize="16" 
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"/>
                        <Border Background="#9B8CFF"
                                CornerRadius="12"
                                Padding="8,3"
                                HorizontalAlignment="Right">
                            <TextBlock Text="{Binding SelectedStrengthsCount, StringFormat='{}{0} Selected'}"
                                       FontSize="11"
                                       FontWeight="SemiBold"/>
                        </Border>
                    </Grid>

                    <!-- Search -->
                    <TextBox Text="{Binding StrengthSearchText, UpdateSourceTrigger=PropertyChanged}"
                             Background="#2A2A32"
                             Foreground="White"
                             Padding="10"
                             BorderBrush="#3A3A44"
                             BorderThickness="1">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Setter Property="Foreground" Value="White"/>
                                <Style.Triggers>
                                    <Trigger Property="Text" Value="">
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <VisualBrush Stretch="None" AlignmentX="Left">
                                                    <VisualBrush.Visual>
                                                        <TextBlock Text="Search strengths..." 
                                                                   Foreground="#666" 
                                                                   Margin="10,0,0,0"/>
                                                    </VisualBrush.Visual>
                                                </VisualBrush>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                </StackPanel>

                <!-- Legend -->
                <Border Grid.Row="1"
                        Background="#2A2A32"
                        CornerRadius="4"
                        Padding="10"
                        Margin="0,0,0,10">
                    <TextBlock TextWrapping="Wrap" FontSize="11" Opacity="0.8">
                        <Run Text="💡 Tip:"/>
                        <Run Text="Use the search Bar above and select the strengths to set their power values (0-100)."/>
                    </TextBlock>
                </Border>

                <!-- Strengths List -->
                <Border Grid.Row="2"
                        Background="#2A2A32"
                        CornerRadius="4"
                        BorderBrush="#3A3A44"
                        BorderThickness="1">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding FilteredStrengths}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border x:Name="ItemBorder" 
                                            BorderBrush="#3A3A44" 
                                            BorderThickness="0,0,0,1" 
                                            Padding="12,10"
                                            Background="Transparent">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- Top Row: Checkbox, Title, Value -->
                                            <Grid Grid.Row="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="60"/>
                                                </Grid.ColumnDefinitions>

                                                <CheckBox Grid.Column="0"
                                                          IsChecked="{Binding IsSelected, UpdateSourceTrigger=PropertyChanged}"
                                                          VerticalAlignment="Center"
                                                          Margin="0,0,10,0"/>

                                                <TextBlock Grid.Column="1"
                                                           Text="{Binding Title}"
                                                           FontWeight="SemiBold"
                                                           FontSize="13"
                                                           VerticalAlignment="Center"/>

                                                <Border Grid.Column="2"
                                                        Background="#9B8CFF"
                                                        CornerRadius="4"
                                                        Padding="6,2"
                                                        VerticalAlignment="Center"
                                                        x:Name="ValueBadge">
                                                    <TextBlock Text="{Binding Value}"
                                                               FontWeight="Bold"
                                                               FontSize="12"
                                                               HorizontalAlignment="Center"/>
                                                </Border>
                                            </Grid>

                                            <!-- Bottom Row: Description and Slider -->
                                            <StackPanel Grid.Row="1" 
                                                        Margin="30,5,0,0"
                                                        x:Name="DetailsPanel">
                                                <TextBlock Text="{Binding Description}"
                                                           FontSize="10"
                                                           Opacity="0.7"
                                                           TextWrapping="Wrap"
                                                           Margin="0,0,0,8"/>

                                                <Slider Minimum="0" 
                                                        Maximum="100" 
                                                        TickFrequency="5" 
                                                        IsSnapToTickEnabled="True"
                                                        Value="{Binding Value, UpdateSourceTrigger=PropertyChanged}"
                                                        IsEnabled="{Binding IsSelected}"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>

                                    <DataTemplate.Triggers>
                                        <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                            <Setter TargetName="ItemBorder" Property="Background" Value="#1E1E28"/>
                                            <Setter TargetName="DetailsPanel" Property="Opacity" Value="1.0"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding IsSelected}" Value="False">
                                            <Setter TargetName="DetailsPanel" Property="Opacity" Value="0.4"/>
                                            <Setter TargetName="ValueBadge" Property="Opacity" Value="0.4"/>
                                        </DataTrigger>
                                    </DataTemplate.Triggers>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>